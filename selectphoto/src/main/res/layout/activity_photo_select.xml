<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#303F9F">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back_normal"
            android:padding="8dp"
            android:layout_marginLeft="2dp"/>

        <LinearLayout
            android:id="@+id/photo_folder_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/select_folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近照片"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/folder_select_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/up_pull"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_select_recycler"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="预览"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/photo_send"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="10dp"
            android:background="#00ff00"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </FrameLayout>

</LinearLayout>